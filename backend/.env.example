# Backend Environment Variables
PORT=5500
FRONTEND_URL=http://localhost:3000

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Zoho Email Configuration
ZOHO_EMAIL_USER=your_zoho_email@yourdomain.com
ZOHO_EMAIL_PASS=your_zoho_app_password

# Pinata IPFS Configuration
# Option 1: JWT Token (legacy - for backward compatibility)
PINATA_JWT=your_pinata_jwt_token

# Option 2: API Key & Secret (recommended - used by Pinata SDK)
# Get these from: https://app.pinata.cloud/developers/api-keys
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_api_key

# Frontend Base URL (for email links)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Blockchain Configuration
# The deployed contract address on Sepolia (or your chosen network)
CONTRACT_ADDRESS=0xYourContractAddressHere

# Private key of the wallet that will sign transactions (without 0x prefix)
# IMPORTANT: Keep this secure! Never commit this to version control
PRIVATE_KEY=your_private_key_here

# RPC URL for connecting to Ethereum network
# Examples:
# - Infura: https://sepolia.infura.io/v3/YOUR_INFURA_API_KEY
# - Alchemy: https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
# - Public: https://rpc.sepolia.org
BLOCKCHAIN_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_INFURA_API_KEY

# Chain ID (11155111 for Sepolia, 1 for Ethereum Mainnet)
CHAIN_ID=11155111
